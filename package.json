{
  "scripts": {
    "build": "tsc --project tsconfig.build.json && tsc-alias",
    "dev": "nodemon src/server.ts",
    "start": "prisma migrate deploy && node dist/server.js",
    "test": "dotenv -e .env.test  prisma migrate deploy && dotenv -e .env.test jest -- --runInBand",
    "test:coverage": "npm run test -- --coverage",
    "test:report": "dotenv -e .env.test prisma migrate deploy & dotenv -e .env.test jest -- --coverage --runInBand --coverageReporters=json-summary --coverageDirectory=coverage --collectCoverageFrom='**/*.ts'"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "http-status": "^1.7.3",
    "init": "^0.1.2",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "dotenv-cli": "^7.3.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
